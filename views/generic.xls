            for (c,element) in enumerate(row):
                print("%s%s %s" % (chr(ord('A')+c),(r+1), element))
                worksheet.write('%s%s' % (chr(ord('A')+c),(r+1)), str(element))
            pass
        pass
    pass
    workbook.close()
    data = open(filename,'rb').read()
    os.unlink(filename)
    response.headers['Content-Type']='application/vnd.ms-excel'
